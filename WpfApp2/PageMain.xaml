      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center">
            <Button Name="BtnPW1"
                    Content="Рейс"
                    Click="BtnPW1_Click"/>
